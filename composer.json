{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "RC",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0.2",
        "ext-apcu": "*",
        "ext-zend-opcache": "*",
        "guzzlehttp/guzzle": "^7.4",
        "laravel/framework": "^9.0",
        "laravel/sanctum": "^2.15",
        "laravel/tinker": "^2.7"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.12",
        "captainhook/captainhook": "^5.10",
        "fakerphp/faker": "^1.19",
        "friendsofphp/php-cs-fixer": "^3.8",
        "nunomaduro/collision": "^6.2",
        "nunomaduro/larastan": "^2.1",
        "phpstan/phpstan": "^1.7",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ignition": "^1.0",
        "stechstudio/laravel-php-cs-fixer": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "captainhook install -f -s || true"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate || true",
            "@php artisan ide-helper:meta || true",
            "@php artisan ide-helper:models -N || true"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "lint": [
            "phpstan analyze"
        ],
        "format": [
            "@php artisan fixer:fix --rules=@PSR12"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "barryvdh/laravel-ide-helper"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
